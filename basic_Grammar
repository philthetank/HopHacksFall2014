start
  = txt: (texts citation texts) { return txt.join("") }

citation
 = txt: ( "(" texts ")" ) { return "(...)" }

texts
 = txt: (text texts?) { return txt.join("") }

text
 = txt: [A-Za-z ,."0-9] { return txt }

string
  = str:[A-Za-z]+ { return str.join("") }

space
 = str:[" "]+ { return str.join() }
