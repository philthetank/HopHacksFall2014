/* CSSTidy 1.3: Mon, 07 Jul 2014 06:23:00 -0700 */
/* Tooltips ************************************
 **
 * Defaults
 *
 **/
[data-tooltip] {
position:relative;
display:inline-block;
}

[data-tooltip]:before,[data-tooltip]:after {
z-index:10000000000;
visibility:hidden;
position:absolute;
opacity:0;
border-radius:.4em;
pointer-events:none;
transform:translate3d(0,0,0);
transition:.3s ease;
transition-delay:0;
}

[data-tooltip]:hover:before,[data-tooltip]:hover:after {
visibility:visible;
opacity:1;
transition-delay:0;
}

input[data-tooltip]:focus:before,input[data-tooltip]:focus:after {
visibility:visible;
opacity:1;
transition-delay:100ms;
}

[data-tooltip]:before {
content:'';
position:absolute;
background:transparent;
border:.7em solid transparent;
z-index:1000001;
transition-delay:0;
}

[data-tooltip]:after {
/* letter-spacing: 0.1em; */
font-size:1em;
line-height:1.25em;
text-align:center;
font-weight:400;
content:attr(data-tooltip);
background:#383838;
color:#FFF;
text-shadow:0 .2em 0 #000;
padding:.75em;
min-width:5.75em;
max-width:20em;
width:100%;
/* white-space:    nowrap;*/
box-shadow:.25em .25em 1em rgba(0,0,0,0.3);
transition-delay:0;
}

/**
 * Defaults
 *   Tooltip Location
 *     - By default the tooltip will display below the selected
 *       eleyount. The classes below can be used to change the
 *       location.
 **/
[data-tooltip]:before {
margin-top:-1.05em;
}

[data-tooltip]:after {
margin-left:-30%;
}

[data-tooltip]:before,[data-tooltip]:after {
top:100%;
left:60%;
}

[data-tooltip]:hover:after,[data-tooltip]:hover:before {
-webkit-transform:translateY(0.75em);
-moz-transform:translateY(0.75em);
transform:translateY(0.75em);
}

/**
 * Defaults
 *   Tooltip Arrow Color
 **/
[data-tooltip]:before {
border-bottom-color:#383838;
}

/**
 * set default color for tooltip arrows
 */
.bottom.top:before {
border-top-color:#383838;
}

.bottom.left:before {
border-left-color:#383838;
}

.bottom.right:before {
border-right-color:#383838;
}

/**
 * top tooltip
 */
.bottom.top:before {
margin-bottom:-12px;
}

.bottom.top:after {
margin-left:-18px;
}

.bottom.top:before,.bottom.top:after {
bottom:100%;
left:50%;
}

.bottom.top:hover:after,.bottom.top:hover:before {
-webkit-transform:translateY(-8px);
-moz-transform:translateY(-8px);
transform:translateY(-8px);
}

/**
 * right tooltip
 */
.bottom.right:before {
margin-left:-12px;
margin-bottom:-6px;
}

.bottom.right:after {
margin-bottom:-14px;
}

.bottom.right:before,.bottom.right:after {
left:100%;
bottom:50%;
}

.bottom.right:hover:after,.bottom.right:hover:before {
-webkit-transform:translateX(8px);
-moz-transform:translateX(8px);
transform:translateX(8px);
}

/**
 * left tooltip
 */
.bottom.left:before {
margin-right:-12px;
margin-bottom:-6px;
}

.bottom.left:after {
margin-bottom:-14px;
}

.bottom.left:before,.bottom.left:after {
right:100%;
bottom:50%;
}

.bottom.left:hover:after,.bottom.left:hover:before {
-webkit-transform:translateX(-8px);
-moz-transform:translateX(-8px);
transform:translateX(-8px);
}
